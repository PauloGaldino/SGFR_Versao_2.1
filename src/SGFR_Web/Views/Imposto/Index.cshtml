@model IEnumerable<SGFR_Web.ViewModels.Vendas.ImpostoVIewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary " asp-action="Create">Adicionar novo Imposto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImpostoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taxa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImpostoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Taxa)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ImpostoId">Editar</a> |
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ImpostoId">Detalhes</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ImpostoId">Deletar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
