@model IEnumerable<SGFR_Web.ViewModels.ClienteViewModel>


@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a  class="btn btn-primary " asp-action="Create">Adicionar novo Cliente</a>|
    <a  class="btn btn-success" asp-action="Especiais">Lista de Clientes Especiais</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClienteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.ClienteId)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ClienteId">Editar</a> |
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ClienteId">Detalhes</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ClienteId">Deletar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
